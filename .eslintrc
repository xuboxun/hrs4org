{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true
  },
  "plugins": [
    "react"
  ],
  "extends": [
    "standard",
    "plugin:react/recommended"
  ],
  "rules": {
    "indent": ["error", 4],
    "semi": ["error", "always"],
    "space-before-function-paren": ["error", "never"],
    "react/prop-types": 0
  }
}
